<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp">
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:id="@+id/img_check"
        android:src="@drawable/checkno"/>
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/img_check"
        android:id="@+id/img_icon"/>

    <TextView
        android:id="@+id/text_titlt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_icon"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/img_icon"
        android:layout_marginBottom="15dp"
        android:id="@+id/text_price"
        android:layout_marginLeft="20dp"
        android:textColor="#ff0000"
        />
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/text_price"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        >
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/add"
            android:id="@+id/img_add"
            android:layout_alignParentBottom="true"
            />
        <EditText
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/edit_text"
            android:gravity="center"
            android:background="@null"
            android:text="1"
            android:inputType="number"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/img_add"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/remove"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/edit_text"
            android:id="@+id/img_subtract"/>
    </RelativeLayout>
</RelativeLayout>